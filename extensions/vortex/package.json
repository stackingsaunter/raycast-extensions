{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "vortex",
  "title": "Vortex",
  "description": "The fastest way to use bitcoin on macOS",
  "icon": "vortex.png",
  "author": "saunter",
  "categories": [
    "Finance"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "nwcurl",
      "title": "NWC connection details",
      "description": "Your NWC wallet connection details",
      "placeholder": "nostr+walletconnect://...",
      "type": "password",
      "required": true
    },
    {
      "name": "currency",
      "title": "Currency",
      "description": "You preferred currency to see amounts",
      "type": "dropdown",
      "data": [
        {
          "title": "USD",
          "value": "USD"
        },
        {
          "title": "EUR",
          "value": "EUR"
        },
        {
          "title": "GBP",
          "value": "GBP"
        }
      ],
      "required": true,
      "default": "USD"
    }
  ],
  "commands": [
    {
      "name": "send",
      "title": "Send",
      "keywords": [
        "send",
        "pay",
        "wallet",
        "invoice",
        "lnurl",
        "lightning"
      ],
      "subtitle": "Send to lightning address or pay lightning invoice",
      "description": "Send to lightning address or pay lightning invoice",
      "icon": "send.png",
      "mode": "view",
      "script": "src/Send.tsx",
      "arguments": [
        {
          "name": "input",
          "placeholder": "address or invoice",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "balance",
      "title": "View Balance",
      "keywords": [
        "balance",
        "wallet",
        "lightning",
        "vortex",
        "bitcoin"
      ],
      "description": "Display your current wallet balance",
      "icon": "vortex.png",
      "mode": "view",
      "script": "src/Balance.tsx"
    },
    {
      "name": "createinvoice",
      "title": "Receive",
      "keywords": [
        "receive",
        "invoice",
        "wallet",
        "lightning"
      ],
      "description": "Create a new lightning invoice",
      "icon": "receive.png",
      "mode": "view",
      "script": "src/CreateInvoice.tsx"
    },
    {
      "name": "listtransactions",
      "title": "Recent Transactions",
      "keywords": [
        "wallet",
        "payments",
        "lightning",
        "transactions"
      ],
      "description": "Show recent transactions",
      "icon": "vortex.png",
      "mode": "view",
      "script": "src/ListTransactions.tsx"
    }
  ],
  "dependencies": {
    "@getalby/lightning-tools": "^6.0.0",
    "@getalby/sdk": "^7.0.0",
    "@raycast/api": "^1.104.1",
    "cross-fetch": "^4.1.0",
    "qrcode": "^1.5.4",
    "websocket-polyfill": "^0.0.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "^25.0.9",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.9",
    "eslint": "^9.39.2",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "keywords": []
}
